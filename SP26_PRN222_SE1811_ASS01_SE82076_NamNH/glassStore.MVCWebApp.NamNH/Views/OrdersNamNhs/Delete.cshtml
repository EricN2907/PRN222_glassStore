@model glassStore.Entites.NamNH.Models.OrdersNamNh

@{
    ViewData["Title"] = "Xóa Đơn Hàng";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', sans-serif;
    }

    .card-delete {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        border-top: 5px solid #dc3545;
    }

    .delete-header {
        color: #dc3545;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .info-label {
        font-weight: 600;
        color: #6c757d;
    }

    .info-value {
        font-weight: 500;
        color: #212529;
    }

    .warning-box {
        background-color: #fff3cd;
        border-left: 5px solid #ffc107;
        padding: 15px;
        border-radius: 5px;
        color: #856404;
        margin-bottom: 20px;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card card-delete bg-white p-5">

                <div class="text-center mb-4">
                    <i class="fas fa-exclamation-triangle fa-4x text-danger mb-3"></i>
                    <h2 class="delete-header text-uppercase">Xác Nhận Xóa</h2>
                    <p class="text-muted">Bạn có chắc chắn muốn xóa đơn hàng này không? <br>Hành động này <strong>không thể hoàn tác</strong>.</p>
                </div>

                <div class="warning-box">
                    <i class="fas fa-info-circle me-2"></i>
                    Vui lòng kiểm tra kỹ thông tin bên dưới trước khi xác nhận.
                </div>

                <div class="bg-light p-4 rounded mb-4">
                    <div class="row mb-2">
                        <div class="col-5 info-label">Mã Đơn:</div>
                        <div class="col-7 info-value text-primary">@Html.DisplayFor(model => model.OrderCode)</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 info-label">Khách Hàng:</div>
                        <div class="col-7 info-value">@Html.DisplayFor(model => model.ReceiverName)</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 info-label">SĐT:</div>
                        <div class="col-7 info-value">@Html.DisplayFor(model => model.ReceiverPhone)</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 info-label">Tổng Tiền:</div>
                        <div class="col-7 info-value text-success fw-bold">@Html.DisplayFor(model => model.GrandTotal)</div>
                    </div>
                    <div class="row">
                        <div class="col-5 info-label">Ngày Tạo:</div>
                        <div class="col-7 info-value">@Html.DisplayFor(model => model.CreatedAt)</div>
                    </div>
                </div>

                <form asp-action="Delete" class="d-grid gap-2">
                    <input type="hidden" asp-for="OrderId" />
                    <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                        <i class="fas fa-trash-alt me-2"></i> Xác Nhận Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg border-0">
                        <i class="fas fa-times me-2"></i> Hủy Bỏ
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>